{
  "name": "verdict",
  "version": "1.0.0",
  "description": "My kickass Nuxt.js project",
  "author": "Talanoff",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server/distindex.js --watch server",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "api:init": "git submodule update --init --recursive && cd ./server && npm install",
    "api:schema:sync": "cd ./server && typeorm schema:sync",
    "api:migrate": "cd ./server && typeorm migration:run",
    "api:build": " cd ./server && npm run build-dev &&  cd .. &&  npm run api:schema:sync && npm run api:migrate"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/dotenv": "^1.4.0",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "nuxt": "^2.12.2",
    "vue-server-renderer": "^2.6.11"
  },
  "devDependencies": {
    "nodemon": "^1.18.9",
    "@nuxtjs/eslint-config": "^2.0.0",
    "@nuxtjs/eslint-module": "^1.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^6.1.0",
    "eslint-plugin-nuxt": ">=0.4.2"
  }
}
